generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {

  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  email String @unique
  password String
  created_at DateTime?  @default(now())
  uptaded_at DateTime?  @default(now())


}